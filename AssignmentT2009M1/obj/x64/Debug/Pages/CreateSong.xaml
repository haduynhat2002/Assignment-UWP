<Page
    x:Class="AssignmentT2009M1.Pages.CreateSong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AssignmentT2009M1.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Margin="0 10 0 20">
            <TextBlock Text="Song form" Margin="20 20 0 10" 
                       FontSize="20" FontWeight="Bold"/>
            <TextBox x:ConnectionId='2' x:Name="Name" Header="Name" Width="620" 
                         PlaceholderText="Please enter song name"/>
            <TextBox x:ConnectionId='3' x:Name="Description" Header="Description" Height="100" Width="620" 
                     PlaceholderText="Please enter song description"/>
            <StackPanel>
                <TextBox x:ConnectionId='10' x:Name="Author" Header="Author" Width="300" 
                         PlaceholderText="Please enter author name" Margin="0 0 20 0"/>
                <TextBox x:ConnectionId='11' x:Name="Singer" Header="Singer" Width="300" 
                         PlaceholderText="Please enter singer name"/>
            </StackPanel>
            <StackPanel>
                <TextBox x:ConnectionId='8' x:Name="Thumbnail" Header="Thumbnail" Width="300" Margin="0 0 20 0"
                     PlaceholderText="Please enter song thumbnail"/>
                <Button x:ConnectionId='9' Content="Click here to choose image" Margin="0 20 0 0"                                 />
            </StackPanel>
            <StackPanel>
                <TextBox x:ConnectionId='6' x:Name="Link" Header="Link" Width="300" Margin="0 0 20 0"
                     PlaceholderText="Please enter song mp3 link"/>
                <Button x:ConnectionId='7' Content="Click here to choose file" Margin="0 20 0 0"                               />
            </StackPanel>
            <TextBox x:ConnectionId='4' x:Name="Message" Header="Message" Height="100" Width="620" 
                     PlaceholderText="Please enter your message"/>
            <StackPanel>
                <Button x:ConnectionId='5' Content="Submit" Width="120" Margin="0 0 10 0"                     />
                <Button Content="Reset" Width="120"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</Page>

